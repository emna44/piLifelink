pipeline {
    agent any

    environment {
        SERVER_USER = 'your-server-user'
        SERVER_IP = 'your-server-ip'
        SERVER_DIR = '/home/your-server-user/deployment-folder'
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning source code...'
                checkout scm  // Automatically checks out the repository defined in Jenkins' SCM configuration
            }
        }

        stage('Build React App') {
            steps {
                dir('template') {  // Changed from 'frontend' to 'template'
                    sh 'npm install'
                    sh 'CI=false npm run build'  // This prevents warnings from being treated as errors
                }
            }
        }

        stage('Build Node App') {
            steps {
                dir('server') {  // Changed from 'server' to 'server'
                    sh 'npm install'
                }
            }
        }

        stage('Copy Files to Server') {
            steps {
        sh 'echo "Deployment would happen here"'
        // Alternative deployment methods that don't require SSH
    }
        }

        stage('Deploy on Server') {
            steps {
                sshagent (credentials: ['your-ssh-credential-id']) {
                    sh """
                        ssh ${SERVER_USER}@${SERVER_IP} '
                        cd ${SERVER_DIR} &&
                        docker-compose down &&
                        docker-compose up -d --build
                        '
                    """
                }
            }
        }
    }
}
